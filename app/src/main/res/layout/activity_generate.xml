<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_generate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:windowSoftInputMode="adjustPan"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sagarshukla.kkk.Generate">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2">
    <EditText
        android:layout_width="match_parent"
        android:background="@drawable/generate"
        android:id="@+id/editText"
        android:maxHeight="30dp"
        android:maxEms="10"
        android:inputType="textMultiLine"
        android:textColor="#009688"
        android:gravity="center|center_horizontal"
        android:textCursorDrawable="@drawable/ff"
        android:foregroundGravity="center"
        android:hint="Please enter the content."
        android:textColorHint="#4DB6AC"
        android:layout_height="wrap_content" />
    </ScrollView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_clear_black_24dp"
        android:layout_alignParentRight="true"
        android:id="@+id/imageButton2" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"

        android:id="@+id/imageView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:src="@drawable/ic_save_black_24dp"
        android:id="@+id/imageButton3"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/imageButton2"
        android:layout_toStartOf="@+id/imageButton2"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp" />

    <com.dd.CircularProgressButton
        android:id="@+id/buttonc"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:textSize="17dp"
        app:cpb_cornerRadius="40dp"
        android:textColor="#fff"
        android:background="#009688"
        app:cpb_textIdle="@string/Generate"
        app:cpb_textComplete="Generated"
        app:cpb_selectorComplete="@color/colormy"
        app:cpb_selectorError="@color/colorAccent"
        app:cpb_selectorIdle="@color/colormy"
        app:cpb_colorIndicator="#009688"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/scrollView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
